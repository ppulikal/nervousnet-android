<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:clickable="false"
    android:duplicateParentState="false"
    android:gravity="left"
    android:longClickable="false"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <ImageView
        android:id="@+id/logo_small"
        android:layout_width="@dimen/action_bar_logo_width"
        android:layout_height="@dimen/action_bar_logo_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:src="@drawable/logo" />

    <Switch
        android:id="@+id/mainSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:switchMinWidth="@dimen/switch_min_width"
        android:text="Data Collection"
        android:textSize="@dimen/switch_label_size"
        android:thumb="@drawable/thumb"
        android:track="@drawable/track" />

</RelativeLayout>